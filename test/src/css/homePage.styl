.topheader
  width 100%
  height 50px
  line-height 50px
  background-color #0092D8
  padding  0 10px
  box-sizing border-box
  position relative
  .topheaderleft
    width 30%
    // position absolute
    // left 0
    // top 0
    float left
    h2
      color #fff
      position absolute
      left 54px
      top 50%
      font-size 20px
      margin-top -25px
    img
      width 30px
      height 30px
      margin-left 10px
      vertical-align middle
  .rightdiv
    position absolute
    right 10px
    cursor pointer
    img
      vertical-align middle
      display inline-block
      margin-top -5px
    span
      color #fff
      margin-right 10px
      display inline-block
      line-height 50px
      font-size 13px

.mainPasge
  height 100%
  box-sizing border-box
  .ant-breadcrumb
     background-color #fff
     height 40px
     line-height 40px
     width 100%
     padding 0 10px
     box-sizing border-box
  .mainContent
    padding 10px
    box-sizing border-box
    &::-webkit-scrollbar
      display none
      padding 10px !important
      padding-bottom 0
      height 93%
      box-sizing border-box
      overflow-y scroll
.ant-layout-footer
  padding  8px 
  box-sizing border-box
.ant-layout-sider
  background-color #fff!important
.ant-layout-sider-trigger
   background-color #e6f7ff!important
   color #1890ff!important
.wrap 
  bottom 20px
  left 30%
  position absolute
  width 100px
  z-index 100
  .shadow
    -webkit-animation shadow 500ms cubic-bezier(0.165, 0.840, 0.440, 1.000) infinite alternate
    animation shadow 500ms cubic-bezier(0.165, 0.840, 0.440, 1.000) infinite alternate
    background #000
    bottom -90px
    height 25px
    width 75px
    border-radius 100%
    left -8px
    margin auto
    position absolute
    right 50px
    top 0
    &:hover
     animation-play-state paused
  .ball 
    background -webkit-gradient(linear, left top, left bottom, from(#e55), to(#b00))
    background -webkit-linear-gradient(#e55, #b00)
    background linear-gradient(#e55, #b00)
    cursor pointer
    animation ball 2000ms cubic-bezier(0.165, 0.840, 0.440, 1.000) infinite alternate
    height 40px
    width 40px
    border-radius 100%
    left 0
    margin auto
    position absolute
    right 0
    top 0
    &:hover
      animation-play-state paused
  .bubble
    width 80px
    height 40px 
    border-radius 50%
    position absolute
    text-align center
    line-height 30px
    background #1890ff
    color #fff
    right 0
    margin auto
    position absolute
    right -40px
    top -55px
    &:after
      content ''
      position absolute
      top 100%
      left 0px
      width 50px
      height 14px
      border-width 0
      border-style solid
      border-color transparent
      margin-top -2px
      border-right-width 11px
      border-right-color currentColor
      border-radius 0 0 136px 0
      color #1890ff
@keyframes shadow{
  0% {
      opacity: 0.2;
      -webkit-transform: scale( 0.75 );
      transform: scale( 0.75 );
  }
  100% {
      opacity: 0.05;
      -webkit-transform: scale( 1 );
      transform: scale( 1 );
  }
}
@keyframes ball {
  0% {
     -webkit-transform: translateX( 0 );
      transform: translateX( 0 );
  }
  25% {
      -webkit-transform: translateX( -50px );
      transform: translateX( -50px );
  }
  50% {
      -webkit-transform: translateX( -100px );
      transform: translateX( -100px );
  }
  75% {
      -webkit-transform: translateX( -150px );
      transform: translateX( -150px );
  }
  100% {
      -webkit-transform: translateX( -250px );
      transform: translateX( -250px );
  }
}




